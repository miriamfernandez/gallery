{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Gallery</h1>
            </div>
            {% for item in items %}
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href=" {{ path('item_edit',{item_id : item.id} ) }}">
                    <img class="img-responsive" src=" {{ asset('uploads/images/' ~ item.path) }}" alt="">
                </a>
            </div>
            {% else %}
                <p>No images</p>
            {% endfor %}
        </div>

    </div>
    <!-- /.container -->


{% endblock %}


