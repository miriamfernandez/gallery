{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <!-- /.container -->
    <div class="container">
        <a href="{{ url('item_new') }}" class="pull-right" >  {{ 'New image'|trans }}
            <span role="button" class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
        <h2>Items</h2>
        <table class="table table-striped">
            <tr>
                <th>{{ 'Image'|trans }}</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Edit'|trans }}</th>
                <th>{{ 'Delete'|trans }}</th>
            </tr>
            {% for item in items %}
                <tr>
                    <td>
                        <img class="img-responsive" style="height: 100px;" src=" {{ asset('uploads/images/' ~ item.path) }}" alt="">
                    </td>
                    <td>
                        {{ item.name }}
                    </td>
                    <td>
                        {{ item.description }}
                    </td>
                    <td>
                        <a href="{{ url('item_edit', {'item_id': item.id}) }}">
                            <span role="button" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('item_delete', {'item_id': item.id}) }}"
                           onclick="return confirm('are you sure?')">
                            <span role="button" class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}


