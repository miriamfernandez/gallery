{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <a href="{{ url('user_new') }}" class="pull-right" > Add new user
            <span role="button" class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
        <h2>Users</h2>
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        <a href="{{ url('user_edit', {'user_id': user.id}) }}">
                            <span role="button" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('user_delete', {'user_id': user.id}) }}"
                           onclick="return confirm('are you sure?')">
                            <span role="button" class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}